                        <?php } ?>
                    </p>
                <?php } ?>

                <?php if ($product['price']) { ?>
                    <div class="content_price">
                        <?php if (!$product['special']) { ?>
                            <span class="price product-price"><?php echo $product['price']; ?></span>
                        <?php } else { ?>
                            <span class="price product-price"><?php echo $product['special']; ?></span> <span class="price old-price"><?php echo $product['price']; ?></span>
