<?php foreach ($products as $product) { ?>
    <li class="col-sx-12 <?php if ($column_left || $column_right) { ?>col-sm-<?php echo (isset($category_product_per_row) && !empty($category_product_per_row) ? intval($category_product_per_row) : 4)?><?php }else{ ?>col-sm-<?php echo (isset($category_product_per_row) && !empty($category_product_per_row) ? intval($category_product_per_row) : 3)?><?php } ?>">
